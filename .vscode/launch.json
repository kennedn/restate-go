    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "console": "integratedTerminal",
            "env": {
                "PATH": "$PATH:/usr/local/go/bin",
                "RESTATECONFIG": "/home/kennedn/Projects/restate-go/config/config.yaml"
            },
            "asRoot": true
        },
        {
            "name": "Debug Current File",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PATH": "$PATH:/usr/local/go/bin"
            },
            "asRoot": true
        },
        {
            "name": "Debug Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "console": "integratedTerminal",
            "env": {
                "PATH": "$PATH:/usr/local/go/bin"
            },
            "asRoot": true,
            "args": ["^TestPing$"]
        }
    ]
}